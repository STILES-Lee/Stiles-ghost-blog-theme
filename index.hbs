{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}

<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}};
    background-position: left 0px;">
    <div class="main-header-content inner">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{!--#if @blog.navigation--}}
        <!--<a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>-->
        {{!--/if--}}
    
            
        <p><strong>I am {{@blog.title}}</strong>, {{@blog.description}}</p>
        <!-- <h1 class="page-title">{{@blog.title}}</h1>
        <h2 class="page-description">{{@blog.description}}</h2> -->

        <footer class="header-footer clearfix">
            <ul class="icons">
                <li><a href="#" class="fas-icon fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="https://github.com/STILES-Lee" class="fas-icon fa-github"><span class="label">Github</span></a></li>
                <li><a href="#" class="fas-icon fa-dribbble"><span class="label">Dribbble</span></a></li>
                <li><a href="mailto:cwanninglee@gmail.com" class="fas-icon fa-envelope-o"><span class="label">Email</span></a></li>
            </ul>
            <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
            <section class="poweredby">Proudly published with <a href="https://ghost.org">Ghost</a></section>
        </footer>
    </div>
</header>

{{!-- The main content area on the homepage --}}
<main id="content" class="content" role="main">
    <header class="content-header">
        <ul class="tabs">
            <li class="tabs-item">Posts</li>
            <li class="tabs-item">Tags</li>
        </ul>
    </header>

    <div class="tag" style="display: block;">
        {{!-- The tag below includes the post loop - partials/loop.hbs --}}
        {{> "loop"}}
    </div>

    <div class="tag" style="display: none;">
        <ul class="tags">
            <li class="tags-item">
            <a href="/tag/data-structure/"></a>
            </li>
        </ul>
    </div>
    

</main>
